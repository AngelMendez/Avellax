<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps"
        xmlns:gap="http://phonegap.com/ns/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.epicor.ERPMobileLookups" version="0.1.0" defaultlocale="en-US">
    <name>Avellax</name>
    <description>Solucion web para el estudio de fotografia de Teresa Avella</description>
    <author href="http://cordova.io" email="mendezz.angel@gmail.com">Angel Mendez</author>
    <content src="index.html" />
    <vs:features />
    <preference name="phonegap-version" value="cli-6.0.0" />

    <!--Splash Screen Configuration-->
    <!--The delay must be set for it to work on Android-->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="1000" />

    <!--Status Bar Configuration-->
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />

    <!--Stop the bouncing feature in iOS-->
    <preference name="webviewbounce" value="false"/>

    <!-- Min iOS Version -->
    <preference name="deployment-target" value="8.0" />
    <preference name="orientation" value="all" />

    <!-- Min Android Version -->
    <!-- 21 = 5.0 Lollipop -->
    <preference name="android-minSdkVersion" value="21" />

    <!-- Min Windows Version -->
    <preference name="windows-target-version" value="8.1" />

    <preference name="android-build-tool" value="gradle" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <!-- Support for Cordova 5.0.0 plugin system -->
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="https://maps.google.com/*" />
    <allow-navigation href="*" />
    <gap:config-file platform="android" parent="/manifest">
        <application android:debuggable="true" />
    </gap:config-file>

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <plugin name="cordova-plugin-crosswalk-certificate" source="npm" spec="2.0.1"/>
    </platform>

    <platform name="android">
        <icon src="res/icons/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icons/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icons/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icons/android/icon-96-xhdpi.png" density="xhdpi" />
    </platform>

    <plugin name="cordova-plugin-statusbar" version="2.1.0" />

  <preference name="target-device" value="handset" />
    <preference name="BackupWebStorage" value="local" />
</widget>